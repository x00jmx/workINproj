ScreenManager:
    HomeScreen:
    DisplayScreen:

<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        MDTextField:
            id: data_field
            hint_text: "Escreva algo"
            multiline: True
        MDRaisedButton:
            id: send_button
            text: "Enviar"
            pos_hint: {"center_x": 0.5}

<DisplayScreen>:
    name: 'display'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            MDList:
                id: data_list
        MDRaisedButton:
            text: "Voltar"
            pos_hint: {"center_x": 0.5}
            on_release:
                app.root.current = 'home'
                app.root.transition.direction = 'right'
