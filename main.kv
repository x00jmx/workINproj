<TelaMenu>:
    name: 'Menu'
    MDNavigationLayout:
        ScreenManager:
            Screen:
                name: 'menu_screen'
                MDScrollViewRefreshLayout:
                    id: refresh_layout
                    refresh_callback: app.refresh_callback
                    root_layout: root
                    size_hint: 1, 0.9
                    canvas.before:
                        Color:
                            rgba: 0.0, 0.0, 0.75, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    refreshing: True
                    refresh_timeout: 1.5
                    color: 0, 0, 1, 1

                    MDGridLayout:
                        id: box
                        adaptive_height: True
                        cols: 1
                        padding: dp(10)
                        spacing: dp(10)

                MDBottomNavigation:
                    background_color: 1, 1, 1, 1  
                    selected_color_background: app.theme_cls.primary_color
                    text_color_active: 0, 0, 0, 1
                    height: dp(64)  
                    spacing: 5

                    MDBottomNavigationItem:
                        id: screen_1
                        name: 'screen 1'
                        text: 'Menu'
                        icon: 'home'
                        halign: 'center'
                        on_tab_press: app.switch_screen('Menu')

                        MDGridLayout:
                            id: publicacoes_grid
                            adaptive_height: True
                            cols: 1
                            padding: dp(10)
                            spacing: dp(10)

                        MDFloatingActionButton:
                            icon: "pencil"
                            md_bg_color: app.theme_cls.primary_color
                            pos_hint: {'center_x': 0.88, 'center_y': 0.09}
                            elevation: 0
                            on_release: 
                                app.root.transition.direction = "up"
                                app.root.current = 'Publicacoes'

                    MDBottomNavigationItem:
                        name: 'screen 2'
                        text: 'Pesquisar'
                        icon: 'magnify'
                        halign: 'center'
                        on_tab_press: app.switch_screen('Pesquisar') 

                        FloatLayout:
                            size_hint: None, None
                            size: dp(200), dp(200)
                            pos_hint: {'center_x': 0.5, 'center_y': 0.95}

                            MDTextField:
                                hint_text: "Pesquisar"
                                mode: "round"
                                halign: 'left'
                                padding: 10
                                size_hint_x: None
                                width: dp(200)
                                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                icon_left: 'magnify'
                        
                        MDLabel:
                            text: 'Pesquisar'
                            halign: 'center'

                    MDBottomNavigationItem:
                        id: screen_3
                        name: 'screen 3'
                        text: 'Vagas'
                        icon: 'briefcase-variant'
                        halign: 'center'
                        on_tab_press: 
                            app.switch_screen('Vagas')
                            root.carregar_vagas()

                        BoxLayout:
                            orientation: 'vertical'

                            FloatLayout:
                                size_hint_y: None
                                height: dp(60)
                                padding: dp(10)

                                MDTextField:
                                    id:search_field
                                    hint_text: "Pesquisar"
                                    mode: "round"
                                    halign: 'left'
                                    padding: 10
                                    size_hint_x: None
                                    width: dp(200)
                                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                    icon_left: 'magnify'

                                MDIconButton:
                                    icon: "briefcase-variant"  
                                    theme_text_color: "Custom"
                                    text_color: 0, 0, 0, 1
                                    pos_hint: {'center_x': 0.11, 'center_y': 0.5}
                                    on_release: root.criar_vaga()

                                MDIconButton:
                                    icon: "filter"
                                    theme_text_color: "Custom"
                                    text_color: 0, 0, 0, 1  
                                    pos_hint: {'center_x': 0.88 , 'center_y': 0.5}

                            ScrollView: 
                                MDGridLayout:
                                    id: vagas_box
                                    adaptive_height: True
                                    cols: 1
                                    padding: dp(20)
                                    spacing: dp(20)

        MDNavigationDrawer:
            id: nav_drawer
            size_hint_y: 1
            spacing: 10
            background_color: 1, 1, 1, 1  

            FloatLayout:
                spacing: 14
                padding: dp(5)

                MDList:
                    pos_hint: {'center_x': 0.4, 'center_y': 0.27}
                            
                    ConfigItem:
                        text: "Perfil"
                        description: "Editar Perfil"
                        on_release: 
                            app.root.transition.direction = "right"
                            app.root.current = 'config_Perfil'
                        IconLeftWidget:
                            icon: "account-cog"
                    ConfigItem:
                        text: "Segurança"
                        description: "Configurações de segurança do aplicativo"
                        on_release: 
                            app.root.transition.direction = "right"
                            app.root.current = 'Config_Segurança'
                        IconLeftWidget:
                            icon: "security"
                    ConfigItem:
                        text: "Privacidade de Dados"
                        description: "Controle de privacidade e segurança de dados"
                        on_release: 
                            app.root.transition.direction = "right"
                            app.root.current = 'Config_Privacidade_Dados'
                        IconLeftWidget:
                            icon:'lock'
                    ConfigItem:
                        text: "Notificações"
                        description: "Gerencie as notificações do aplicativo"
                        on_release: 
                            app.root.transition.direction = "right"
                            app.root.current = 'config_notificacoes'
                        IconLeftWidget:
                            icon: "bell-cog"
                        
                    ConfigItem:
                        text: "Logout"
                        description: "Sair da conta e fazer logout do aplicativo"
                        on_release: app.show_logout_dialog()
                        IconLeftWidget:
                            icon: "logout"
                MDLabel:
                    id:Username
                    text: "Username"
                    font_size: dp(20)
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {'center_x': 0.45, 'center_y': 0.94}

                Image:
                    source: 'Background/profile.png'
                    size_hint: None, None
                    size: dp(65), dp(65)  
                    pos_hint: {'center_x': 0.10,'center_y': 0.95}
                    pos: self.parent.pos

                MDIconButton:
                    icon: "account-circle"
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.1,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: 
                        app.root.transition.direction = "right"
                        app.root.current = 'config_Perfil'

                MDIconButton:
                    icon: "web"
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.3,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: app.open_link("https://workinweb.netlify.app/")

                MDIconButton:
                    icon:'bookmark-multiple'
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.5,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: 
                        app.root.transition.direction = "right"
                        app.root.current = 'Salvos'

                MDIconButton:
                    icon:"bell-ring"
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.7,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: 
                        app.root.transition.direction = "right"
                        app.root.current = 'Notificacoes'

                MDIconButton:
                    icon:"chat"
